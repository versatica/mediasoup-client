{
	"compileOnSave": true,
	"compilerOptions":
	{
		"lib": [ "es2018", "dom" ],
		"target": "es2018",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"noEmit": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true
	},
	"include": [ "src" ],
	"watchOptions": {
	  "watchFile": "useFsEvents",
	  "watchDirectory": "useFsEvents",
	  "fallbackPolling": "dynamicPriority",
	  "synchronousWatchDirectory": true
	}
}
